                </ul>
            </nav>

            <!-- Main -->
            <div id="main">

                <section class="post">
                    <header class="major">
                        <h2>Adatbázis menü</h2>
                        <p>A választott adatbázis 3 táblájának a rekordjainak megjelenítése, 15-re limitálva.</p>
                    </header>

                    <!-- NP (Nemzeti Park) tábla megjelenítése -->
                    <section id="np-table">
                        <h3>Nemzeti Park tábla</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Név</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% np.forEach(function(row) { %>
                                    <tr>
                                        <td><%= row.id %></td>
                                        <td><%= row.nev %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </section>

                    <!-- TELEPÜLÉS tábla megjelenítése -->
                    <section id="telepules-table">
                        <h3>Település tábla</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Név</th>
                                    <th>Nemzeti Park ID</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% telepules.forEach(function(row) { %>
                                    <tr>
                                        <td><%= row.id %></td>
                                        <td><%= row.nev %></td>
                                        <td><%= row.npid %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </section>

                    <!-- ÚT tábla megjelenítése -->
                    <section id="ut-table">
                        <h3>Út tábla</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Név</th>
                                    <th>Hossz (km)</th>
                                    <th>Kezdő Település</th>
                                    <th>Vég Település</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% ut.forEach(function(row) { %>
                                    <tr>
                                        <td><%= row.id %></td>
                                        <td><%= row.nev %></td>
                                        <td><%= row.hossz %></td>
                                        <td><%= row.kezdotelepid %></td>
                                        <td><%= row.vegtelepid %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </section>

                </section>

            </div>

            <%- include('partials/footer') %>
